class Barang:
    def __init__(self, nama_barang, kode_barang, jumlah_barang, kondisi_barang):
        # Menginisialisasi atribut-atribut dari class Barang
        self.nama_barang = nama_barang
        self.kode_barang = kode_barang
        self.jumlah_barang = jumlah_barang
        self.kondisi_barang = kondisi_barang

    # Fungsi untuk menampilkan detail barang
    def tampilkan_detail_barang(self):
        print(f"Nama Barang: {self.nama_barang}")
        print(f"Kode Barang: {self.kode_barang}")
        print(f"Jumlah Barang: {self.jumlah_barang}")
        print(f"Kondisi Barang: {self.kondisi_barang}")

# Contoh pembuatan objek barang
barang1 = Barang("Komputer", "K001", 35, "Baik")
barang2 = Barang("Proyektor", "P002", 3, "Perlu Perbaikan")
barang3 = Barang("Meja", "M003", "5", "Rusak")

# Menampilkan detail barang
barang1.tampilkan_detail_barang()
barang2.tampilkan_detail_barang()
barang3.tampilkan_detail_barang()

